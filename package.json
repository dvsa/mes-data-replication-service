  "homepage": "https://github.com/dvsa/mes-data-replication-service",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-data-replication-service.git"
  },
  "dependencies": {
    "@dvsa/mes-journal-schema": "1.1.0",
    "@types/aws-lambda": "^8.10.76",
    "@types/aws-sdk": "^2.7.0",
    "@types/luxon": "^1.4.0",
    "aws-sdk": "^2.389.0",
    "escape-json-node": "^2.0.0",
    "lodash": "^4.17.21",
    "luxon": "^1.4.5",
    "moment": "^2.23.0",
    "mysql2": "^1.6.5",
    "node.extend": "^1.1.7"
  },
  "devDependencies": {
    "@dvsa/mes-journal-schema": "1.1.0",
    "@dvsa/mes-microservice-common": "0.7.0",
    "@dvsa/mes-test-schema": "3.26.3",
    "@types/aws-lambda": "^8.10.76",
    "@types/aws-sdk": "^2.7.0",
    "@types/chai": "^4.1.7",
    "@types/cucumber": "^4.0.5",
    "@types/dotenv": "^6.1.0",
    "@types/jasmine": "^2.8.9",
    "@types/lodash": "^4.14.136",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.12.0",
    "@types/node-fetch": "^2.1.6",
    "@types/supertest": "^2.0.7",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk-mock": "^4.3.0",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "docker-compose": "^0.12.0",
    "husky": "^1.3.1",
    "jasmine": "^3.3.1",
    "jasmine-spec-reporter": "^4.2.1",
    "mysql-import": "^1.0.13",
    "node-docker-monitor": "^1.0.11",
    "node-fetch": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.0",
    "rimraf": "^2.6.2",
    "serverless": "^1.41.1",
    "serverless-dotenv-plugin": "^2.0.1",
    "serverless-dynamodb-local": "^0.2.35",
    "serverless-offline": "^4.2.0",
    "serverless-webpack": "^5.2.0",
    "source-map-support": "^0.5.11",
    "supertest": "^3.4.2",
    "ts-loader": "^5.2.2",
    "ts-node": "^8.0.3",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.0",
    "typemoq": "^2.1.0",
    "typescript": "3.2.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.1.2",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "e2e": "run-s clean compile stack:up features stack:down",
    "features": "cucumber-js e2e/ --require 'build/e2e/**/*.js' --tags 'not @skip'",
    "lint": "tslint --project tslint.json",
    "lint:fix": "tslint --fix -p .",
    "package": "./package.sh",
    "prepush": "npm run security-scan && npm run lint && npm test",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "stack:up": "ts-node start-stack.ts",
    "stack:down": "ts-node stop-stack.ts",
    "start": "sls dynamodb install && sls offline start",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "test:int": "run-s clean compile stack:up test:int:suites stack:down",
    "test:int:suites": "jasmine 'build/**/*.int.js'"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run security-scan && npm run lint && npm test"
    }
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-data-replication-service/issues"
  }
}
